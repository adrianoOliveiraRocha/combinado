<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Show Payments Requests</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%-include('include/top-showusers.ejs')%>
    
</head>

<body>
    <!-- Left Panel -->

    <%-include('include/left-panel.ejs')%>

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <%-include('include/header.ejs')%>
        <!-- Header-->

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">All Payments Requests</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Payment Request ID</th>
                                            <th>User Name</th> 
                                            <th></th>                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(pr of paymentsRequests) { %>
                                        <tr> 

                                        <form action="/payment-request-details" method="post">   
                                            <input type="hidden" name="id" value="<%=pr.id%>">
                                            <input type="hidden" name="paymentLink" value="<%=pr.paymentLink%>">
                                            <input type="hidden" name="userId" value="<%=pr.userId%>">
                                            <input type="hidden" name="message" value="<%=pr.message%>">
                                            <input type="hidden" name="userName" value="<%=pr.userName%>"> 
                                                                            
                                            <td><%=pr.id%></td>
                                            <td><%=pr.userName%></td>
                                            <td>
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    Details
                                                </button>
                                            </td>
                                        </form>                                         
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->

    </div><!-- /#right-panel -->

    <!-- Right Panel -->

    <%-include('include/bottom-showusers.ejs')%>


</body>

</html>
