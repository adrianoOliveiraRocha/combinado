<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Payment Request</title>
  <meta name="description" content="Sufee Admin - HTML5 Admin Template">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%-include('./include/top-links.ejs')%>

</head>

<body>


    <!-- Left Panel -->

    <%-include('./include/left-panel.ejs')%>

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

      <!-- Header-->
      <%-include('./include/header.ejs')%>
      <!-- Header-->

        <div class="content mt-3">
                

            <form action="/send-payment-order" method="post" class="form-horizontal">

				<div class="card-body card-block">				

					<div class="row form-group">
						<div class="col col-md-3">
							<label for="userId" class=" form-control-label">User's Id</label>
						</div>
						<div class="col-12 col-md-9">
							<input type="text" name="userId" class="form-control"
								value="<%=userId%>" readonly />
							
						</div>
					</div>
					<div class="row form-group">
						<div class="col col-md-3">
							<label for="paymentLink" class=" form-control-label">Payment Link</label>
						</div>
						<div class="col-12 col-md-9">
							<input type="text" name="paymentLink" placeholder="Payment link" 
                                class="form-control" />
							<span class="form-text text-muted">Paste the payment link</span>
						</div>
					</div>

					<div class="row form-group">
						<div class="col col-md-3">
							<label for="message" class=" form-control-label">Message</label>
						</div>
						<div class="col-12 col-md-9">
                            <textarea rows="" cols="" placeholder="Message to the user"
                                name="message" class="form-control"></textarea>
							<span class="form-text text-muted">Message to the user</span>
						</div>
					</div>
					
				</div>

				<div class="card-footer">
					<button type="submit" class="btn btn-primary btn-sm">
						Send
					</button>					
				</div>
			
			</form>   


        </div> <!-- .content -->
    </div><!-- /#right-panel -->

    <%-include('./include/bottom-links.ejs')%>       

</body>

</html>
