<body>


    <!-- Left Panel -->

    <%-include('./include/left-panel.ejs')%>

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

      <!-- Header-->
      <%-include('./include/header.ejs')%>
      <!-- Header-->

      <div class="content mt-3">
        <% for(notification of notifications) {%>
        <div class="card">            
            <div class="card-header">Notification: <%=notification.id%></div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <td>Message</td><td><%=notification.message%></td>
                    </tr>
                    <tr>
                        <td>Created at</td><td><%=notification.date_time.toLocaleString()%></td>
                    </tr>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-danger" style="color: white" 
                    href="delete-notification?notificationId=<%=notification.id%>">
                    Delete
                </a>
            </div>
        </div>    
        <% } %>  

           


        </div> <!-- .content -->
    </div><!-- /#right-panel -->

    <%-include('./include/bottom-links.ejs')%>       

