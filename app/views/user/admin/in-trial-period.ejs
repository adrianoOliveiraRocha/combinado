<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>In trial period</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%-include('include/top-showusers.ejs')%>
    
</head>

<body>
    <!-- Left Panel -->

    <%-include('include/left-panel.ejs')%>

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <%-include('include/header.ejs')%>
        <!-- Header-->

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Users that are in the trial period</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Email</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(myUser of users) { %>
                                        <tr>
                                            <td>
                                                <a href="#" 
                                                title="Detalhes"
                                                data-toggle="modal" 
                                                data-target="#mediumModal<%=myUser.id%>"
                                                >
                                                    <%=myUser.id%>
                                                </a> 
                                            </td>
                                            <td><%=myUser.email%></td>
                                            <td><%=(myUser.blocked == 1 ? 'Bloked' : 'Ublocked')%></td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->
        
        <!--Modal-->
        <% for(myUser of users) {%>
        <div class="modal fade" id="mediumModal<%=myUser.id%>" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="mediumModalLabel"><%=myUser.email%></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="card">
                            <div class="card-header">
                                <strong>Detalhes</strong>
                            </div>

                            <div class="card-body card-block"> 

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="name" class="form-control-label">Image</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                    <% if(myUser.image != null) {%>
                                        <img src="admin/images/profile_images/<%=myUser.image%>" width="200px">
                                    <% } else {%>
                                        <p class="form-control" style="text-align: center; color: red">
                                            <i style="color: red">No sended</i>
                                        </p>
                                    <% } %>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class="form-control-label">ID</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control" style="text-align: center">
                                            <%=myUser.id%>
                                        </p>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class="form-control-label">Username</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control" style="text-align: center">
                                            <%=myUser.username%>
                                        </p>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class="form-control-label">Email</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control" style="text-align: center">
                                            <%=myUser.email%>
                                        </p>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class="form-control-label">Password</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control" style="text-align: center">
                                            <%=decrypt(myUser.pwd)%>
                                        </p>
                                    </div>
                                </div>    

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class="form-control-label">Creation DateTime</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control" style="text-align: center">
                                            <%=myUser.creationDate.toLocaleString();%>
                                        </p>
                                    </div>
                                </div>  

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class="form-control-label">Web Site</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control" style="text-align: center">
                                            <%=myUser.website;%>
                                        </p>
                                    </div>
                                </div>                           

                            </div>

                            <div class="card-body card-footer">
                                <div class="btn-group">
                                <button type="button" class="btn btn-primary">Options</button>
                                <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/create-notyfication?idToNotify=<%=myUser.id%>">Send Notification</a>
                                    <a class="dropdown-item" href="/show-notifications?userId=<%=myUser.id%>">See Notifications</a>
                                    <a class="dropdown-item" href="/block?idToBlock=<%=myUser.id%>">Block</a>
                                    <a class="dropdown-item" href="/unblock?idToUnblock=<%=myUser.id%>">Unblock</a>
                                </div>
                                </div> 
                            </div>
                            
                        </div>                        
                    </div>


                    </div>
                    
                </div>
            </div>
        </div>
        <% } %>
        <!-- /Modal -->


    </div><!-- /#right-panel -->

    <!-- Right Panel -->

    <%-include('include/bottom-showusers.ejs')%>


</body>

</html>
