<header id="header" class="header">

  <div class="header-menu">

    <div class="col-sm-7">
      <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>

      <div class="header-left">

        <div class="dropdown for-notification" id="sNotifications"></div>
        <div class="dropdown for-message">
          <button class="btn btn-secondary dropdown-toggle" type="button"
            id="message"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="ti-email"></i>
            <span class="count bg-primary"><%=Object.keys(messages).length%></span>
          </button>

          <div class="dropdown-menu" aria-labelledby="message">
            <p class="red">
              <strong>You have <%=Object.keys(messages).length%> Mails</strong> 
            </p>            
            
            <div style="height: 200px; overflow: scroll;">
              <%for(m of messages) { %> 
              <a class="dropdown-item media" href="/message-datail?messageId=<%=m.id%>">            
                <p><%=m.email%></p>  
              </a>
              <% } %>
            </div> 


          </div>
          
      </div>

      </div>

    </div>

    <div class="col-sm-5">
      <div class="user-area dropdown float-right">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% if(typeof user.image == 'undefined' || user.image == null) { %>

          <img class="user-avatar rounded-circle" src="../admin/images/admin-default.png" 
          alt="User Avatar">

          <% } else { %>
            <img src="../admin/images/profile_images/<%=user.image%>" width="40px">
          <% } %>

        </a>

        <div class="user-menu dropdown-menu">
          <a class="nav-link" href="/user-profile"><i class="fa fa-user"></i> Perfil</a>
          <a class="nav-link" href="/logout"><i class="fa fa-power-off"></i> Logout</a>
        </div>
      </div>      

    </div>
  </div>

  <script src="../admin/notifications.js"></script>

</header>