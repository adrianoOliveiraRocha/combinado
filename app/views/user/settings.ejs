<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Bem Vindo!</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%-include('./include/top-links.ejs')%>

</head>

<body onload="callNotifications()">


    <!-- Left Panel -->

    <%-include('./include/left-panel.ejs')%>

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <%-include('./include/header.ejs')%>
        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-3" id="divResponse">
            <div class="page-header float-left">
                <div class="page-title">
                <h1><i class="fa fa-cog"></i> Configurações</h1>
                </div>
            </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="card">
                <form action='/updateSettings' method="POST">

                    <div class="card-header">
                        <div class="panel" style="text-align: center">
                            <h4>Quem recebe clientes na sua empresa?</h4>
                        </div>
                    </div>

                    <div class="card-body">

                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="IReceiveClients"
                                <% if (user.IReceiveClients == 1){ %>
                                checked="checked" <% } %>>
                                    Eu
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="IHaveEmployeers"
                                <% if (user.IHaveEmployeers == 1){ %>
                                checked="checked" <% } %>>
                                Meus colaboradores
                            </label>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="panel" style="text-align: center">
                            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                        </div>
                    </div>
                </form>
            </div>
            <hr>



        </div> <!-- .content -->

    </div><!-- /#right-panel -->

    <%-include('./include/bottom-links.ejs')%>

</body>

</html>
