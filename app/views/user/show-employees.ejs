<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Exibir Empregados</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%-include('include/top-showemp.ejs')%>
    
</head>

<body onload="callNotifications()">
    <!-- Left Panel -->

    <%-include('include/left-panel.ejs')%>

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <%-include('include/header.ejs')%>
        <!-- Header-->

        <div class="content mt-3">

            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Todos os Colaboradores</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(employee of employees) { %>
                                        <tr>
                                            <td>
                                                <a href="#" 
                                                title="Detalhes"
                                                data-toggle="modal" 
                                                data-target="#mediumModal<%=employee.id%>"
                                                >
                                                    <%=employee.name%>
                                                </a> 
                                            </td>
                                            <td><%=employee.email%></td>
                                            
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->
        
        <!--Modal-->
        <% for(employee of employees) {%>
        <div class="modal fade" id="mediumModal<%=employee.id%>" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="mediumModalLabel"><%=employee.name%></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="card">
                            <div class="card-header">
                                <strong>Detalhes</strong>
                            </div>

                            <div class="card-body card-block"> 

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="name" class="form-control-label">Imagem</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                    <% if(employee.image != null) {%>
                                        <img src="admin/images/profile_images/<%=employee.image%>" width="200px">
                                    <% } else {%>
                                        <p class="form-control" style="text-align: center; color: red">
                                            <i>Não enviado</i>
                                        </p>
                                    <% } %>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="name" class="form-control-label">Nome</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control" style="text-align: center">
                                            <%=employee.name%>
                                        </p>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="name" class="form-control-label">Email</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <p class="form-control" style="text-align: center">
                                            <%=employee.email%>
                                        </p>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="name" class="form-control-label">Telefone</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                    <% if(employee.phone != null) {%>
                                        <p class="form-control" style="text-align: center">
                                            <%=employee.phone%>
                                        </p>
                                    <% } else {%>
                                        <p class="form-control" style="text-align: center; color: red">
                                            <i>Não enviado</i>
                                        </p>
                                    <% } %>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="name" class="form-control-label">Endereço</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                    <% if(employee.address != null) {%>
                                        <p class="form-control" style="text-align: center">
                                            <%=employee.address%>
                                        </p>
                                    <% } else {%>
                                        <p class="form-control" style="text-align: center; color: red">
                                            <i>Não enviado</i>
                                        </p>
                                    <% } %>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="name" class="form-control-label">Apresentação</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                    <% if(employee.aboutMe != null) {%>
                                        <textarea cols="17" readonly class="form-control"><%=employee.aboutMe%></textarea>                                        
                                    <% } else {%>
                                        <p class="form-control" style="text-align: center; color: red">
                                            <i>Não enviado</i>
                                        </p>
                                    <% } %>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                <a class="btn btn-primary btn-sm" href="/send-login-pass?id=<%=employee.id%>">
                                    Enviar Login e Senha
                                </a>
                                <a class="btn btn-danger btn-sm" href="/delete_employee?id=<%=employee.id%>">
                                    Deletar
                                </a>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                            </div>

                           

                        </div>                        
                    </div>


                    </div>
                    
                </div>
            </div>
        </div>
        <% } %>
        <!-- /Modal -->


    </div><!-- /#right-panel -->

    <!-- Right Panel -->

    <%-include('include/bottom-showemp.ejs')%>


</body>

</html>
