<header id="header" class="header">

  <div class="header-menu">

    <div class="col-sm-7">
      <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
      <div class="header-left">
        <div class="dropdown for-notification" id="sNotifications">
          
        </div>
      </div>
    </div>

    <div class="col-sm-5">
      <div class="user-area dropdown float-right">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% if(typeof user.image == 'undefined' || user.image == null) { %>

          <img class="user-avatar rounded-circle" src="admin/images/admin-default.png" 
          alt="User Avatar">

          <% } else { %>
            <img src="admin/images/profile_images/<%=user.image%>" width="40px">
          <% } %>

        </a>

        <div class="user-menu dropdown-menu">
          <a class="nav-link" href="/user-profile"><i class="fa fa-user"></i> Perfil</a>
          <a class="nav-link" href="/logout"><i class="fa fa-power-off"></i> Logout</a>
        </div>
      </div>

    </div>
  </div>

  <script src="user/schedulingNotifications.js"></script>
  

</header>