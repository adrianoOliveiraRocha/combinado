  <link href="" rel="stylesheet">

  <title>Bem-Vindo!</title>

  <style>
    .c1 {
     color: <%=colors.color1%>;
     font-weight: bold;
    }
    .c2 {
      color: <%=colors.color2%>
    }
  </style>

  <!-- <link href="core/main.550dcf66.css" rel="stylesheet"> -->
