<body> <!-- Add your content of header -->

<!-- Add your site or app content here -->
  <div class="background-image-container white-text-container">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h1>Agendamento Online</h1>                    
        </div>
      </div>
    </div>
  </div>

  <div class="section-container">
    <div class="container text-center">      
      <input type="hidden" id="employeeId" value="<%=employeeId%>">
      
      <div class="row">

        <div class="col-sm-6">
          <div class="panel">
            <div id="my-calendar"></div>
          </div>
        </div>
        
        <div class="col-sm-6" id="responseChangeDate">
          <div class="alert alert-secondary">
            <strong><%=portuguesedateTime(today).split(' ')[0]%></strong>
          </div>
          <div class="form-control">
            Manhã
          </div>

          <div class="d-flex flex-wrap">
            <% if(morning != null) {%>
            <%for(timeMorning of morning) { %>
            
            <div class="p-2">
              <% if(isItBusyTime(timeMorning)) { %>
              <a href="#" title="INDISPONÍVEL" onclick="unAvailable();"
                class="btn btn-danger"><%=timeMorning%></a>
              <% } else { %>
              <a href="/schedule2?employeeId=<%=employeeId%>&_date=<%=today.getFullYear()%>-<%=today.getMonth() + 1%>-<%=today.getDate()%>&_time=<%=timeMorning%>" 
                class="btn btn-primary"><%=timeMorning%></a>
              <% } %>
            </div>

            <% } %>
            <% } else { %>
            <i style="color:red">Indisponível</i>
            <% } %>             
          </div>
          
          <div class="form-control">
            Tarde
          </div>
          
          <div class="d-flex flex-wrap">
            <% if(afternoon != null) {%>
            <%for(timeAfternoon of afternoon) { %>
            
            <div class="p-2">
              <% if(isItBusyTime(timeAfternoon)) { %>
              <a href="#" title="INDISPONÍVEL" onclick="unAvailable();"
                class="btn btn-danger"><%=timeAfternoon%></a>
              <% } else { %>
              <a href="/schedule2?employeeId=<%=employeeId%>&_date=<%=today.getFullYear()%>-<%=today.getMonth() + 1%>-<%=today.getDate()%>&_time=<%=timeAfternoon%>" 
                class="btn btn-primary"><%=timeAfternoon%></a>
              <% } %>
            </div>

            <% } %>
            <% } else { %>
            <i style="color:red">Indisponível</i>
            <% } %>             
          </div>
                                         
        </div>
          
        </div>       

      </div>

    </div>
  </div>

  <%-include('./include/footer.ejs')%>



