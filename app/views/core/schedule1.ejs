<link rel="stylesheet" type="text/css" href="core/jsCalendar/simple-jscalendar/source/jsCalendar.css">

<body> <!-- Add your content of header -->

  <div class="container text-center">
    <h1 class="c1">Agendamento</h1>
  </div>

  <hr>

  <div class="section-container">
    <div class="container text-center">
      <input type="hidden" id="employeeId" value="<%=employeeId%>">

      <div class="row">

        <div class="col-sm-6">
          <div class="panel">
            <div id="my-calendar"></div>
          </div>
        </div>

        <div class="col-sm-6" id="responseChangeDate">
          <div class="alert alert-secondary">
            <strong><%=portuguesedateTime(today).split(' ')[0]%></strong>
          </div>
          <div class="form-control c2">
            Manhã
          </div>

          <div class="d-flex flex-wrap">
            <% if(morning != null) {%>
            <%for(timeMorning of morning) { %>

            <div class="p-2">
              <% if(isItBusyTime(timeMorning)) { %>
              <a href="#" title="INDISPONÍVEL" onclick="unAvailable();"
                class="btn btn-danger"><%=timeMorning%></a>
              <% } else { %>
              <a href="/schedule2?employeeId=<%=employeeId%>&_date=<%=today.getFullYear()%>-<%=today.getMonth() + 1%>-<%=today.getDate()%>&_time=<%=timeMorning%>"
                class="btn"><%=timeMorning%></a>
              <% } %>
            </div>

            <% } %>
            <% } else { %>
            <i style="color:red">Indisponível</i>
            <% } %>
          </div>

          <div class="form-control c2">
            Tarde
          </div>

          <div class="d-flex flex-wrap">
            <% if(afternoon != null) {%>
            <%for(timeAfternoon of afternoon) { %>

            <div class="p-2">
              <% if(isItBusyTime(timeAfternoon)) { %>
              <a href="#" title="INDISPONÍVEL" onclick="unAvailable();"
                class="btn btn-danger"><%=timeAfternoon%></a>
              <% } else { %>
              <a href="/schedule2?employeeId=<%=employeeId%>&_date=<%=today.getFullYear()%>-<%=today.getMonth() + 1%>-<%=today.getDate()%>&_time=<%=timeAfternoon%>"
                class="btn"><%=timeAfternoon%></a>
              <% } %>
            </div>

            <% } %>
            <% } else { %>
            <i style="color:red">Indisponível</i>
            <% } %>
          </div>

        </div>

        </div>

      </div>

    </div>
  </div>
  <hr>
  <footer class="footer-container text-center">
    <div class="container" style="padding: 10;">
      <div class="row">
        <div class="col">
          Desenvoldido por <a href="#">W3_Software</a>
        </div>
        <div class="col">
          <a href="https://www.facebook.com/w3SoftwareNetBr"
            class="social-round-icon fa-icon" title="" target="_blank">
            Visite nossa página no facebook
          </a>
        </div>
        <div class="col">
          <a href="#">Whatsapp</a>
        </div>
      </div>
    </div>
  </footer>
