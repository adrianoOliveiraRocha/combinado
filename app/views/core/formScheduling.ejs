  <link href="" rel="stylesheet">

  <title>Bem-Vindo!</title>

<link href="core/main.550dcf66.css" rel="stylesheet"></head>

<body> <!-- Add your content of header -->

  <!-- Add your site or app content here -->
  <div class="background-image-container white-text-container">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h1>Agendamento Online</h1>                    
        </div>
      </div>
    </div>
  </div>

  <div class="section-container">
    <div class="container text-center">   
      
      <form method="POST" action="/confirm-scheduling">
        <input type="hidden" name="employeeId" value="<%=employee.id%>">
        <input type="hidden" name="sqlDateTime" value="<%=sqlDateTime%>">

        <div class="card-body card-block">              

          <div class="row form-group">
            <div class="col col-md-3">
              <label for="name">Agendar com</label>
            </div>
            <div class="col-12 col-md-9">
              <input type="text" class="form-control" name="employeeName" 
              readonly value="<%=employee.name%>">
              
            </div>               
          </div>   

          <div class="row form-group">
            <div class="col col-md-3">
              <label for="name">Data</label>
            </div>
            <div class="col-12 col-md-9">
              <input type="hidden" class="form-control" name="_dateTime" 
              readonly value="<%=jsDate.toLocaleString()%>">

              <input type="text" class="form-control" name="_dateTimeShow" 
              readonly value="<%=portugueseDateTime(jsDate)%>">
              
            </div>               
          </div> 

          <div class="row form-group">
            <div class="col col-md-3">
              <label for="phone">Seu Telefone</label>
            </div>  
            <div class="col-12 col-md-9">
              <input type="text" class="form-control" name="clientPhone" id="phone"              
              aria-describedby="somente números" placeholder="Telefone"
              required >
              <p id="phoneHelp" class="form-text text-muted">
              Somente números com DDD. Exemplo: 99999999999</p>
            </div>
          </div>

          <div class="row form-group">
            <div class="col col-md-3">
              <label for="email">Seu Email</label>
            </div>  
            <div class="col-12 col-md-9">
              <input type="email" class="form-control" name="clientEmail" 
              aria-describedby="exemplo@emil.com" placeholder="Email"
              required >
              
            </div>
          </div>          

          <div class="row form-group">
            <div class="col col-md-3">
              <label for="address">Observações</label>
            </div>
            <div class="col-12 col-md-9">
              <textarea class="form-control" name="comments"></textarea>
            </div>
          </div>
          
          
          <hr>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Confirmar</button>
          </div
          >              
        </div>
      </form>

    </div>
  </div>

